# correct typos
[help]
	autocorrect = 1

[branch]
	autosetupmerge = true

# push easily. http://stackoverflow.com/a/23918418/89484
[push]
	default = current
	followTags = true

[pull]
	default = current

[fetch]
	prune = true

[rerere]
	enabled = 1

[credential]
	helper = osxkeychain

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

# Don't use pager for stash
[pager]
	stash = false

# use separate file for username / github token / etc
[include]
	path = "local"

