# use separate file for username / github token / etc
[include]
    path = "local"

[alias]
    s = stash
    sa = stash apply
    sl = stash list
    sp = stash pop
    st = status -sb
    ci = commit -v
    br = branch
    co = checkout
    d = diff --word-diff
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr by %cn)%Creset' --abbrev-commit --date=relative
    lgs = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr by %cn)%Creset' --abbrev-commit --date=relative --shortstat
    svngrab = !git stash && git svn rebase && git stash apply
    undo-commit = reset --soft HEAD^
    up = "!f() { git checkout $1 && git fetch $2 && git merge $2/$1; }; f"
    contrib = !git shortlog -s -n | head -10
    gi = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"

[apply]
    # Detect whitespace errors when applying a patch
    whitespace = fix

[diff]
    # Detect copies as well as renames
    renames = copies
    # Enable an experimental heuristic that shifts the hunk boundary in an
    # attempt to make the resulting patch easier to read.
    indentHeuristic = true

[core]
    compression = 9
    autocrlf = input

[pager]
    # insanely beautiful diffs ==> npm install -g diff-so-fancy
    # diff = diff-so-fancy | less --tabs=4 -RFX
    # show = diff-so-fancy | less --tabs=4 -RFX

[color]
    ui = always
    status = auto
    branch = auto
    diff = auto

[color "diff"]
    meta = yellow bold
    commit = green bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = "red bold 52"
    newNormal = "green bold"
    newHighlight = "green bold 22"

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[merge]
    tool = opendiff
    renameLimit = 0

# rewrites of repo paths
[url "git@github.com:"]
    insteadOf = "https://github.com/"
    pushInsteadOf = "github:"
    pushInsteadOf = "git://github.com/"
    pushInsteadOf = "https://github.com/"

[url "git://github.com/"]
    insteadOf = "github:"

[url "git@gist.github.com:"]
    pushInsteadOf = "gist:"
    pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
    insteadOf = "gist:"

# correct typos
[help]
    autocorrect = 1

[branch]
    autosetupmerge = true

[url "https://github"]
    insteadOf = git://github

# push easily. http://stackoverflow.com/a/23918418/89484
[push]
    default = current
    followTags = true

[pull]
    default = current

[fetch]
    prune = true

[rerere]
    enabled = 1

[credential]
    helper = osxkeychain


[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

